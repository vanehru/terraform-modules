# Terraform Variables Configuration Example
# Copy this file to terraform.tfvars and customize the values

# Resource Group Configuration
azurerm_resource_group_name     = "rpg-aiapp-rg"
azurerm_resource_group_location = "Japan East"

# Environment and Tagging
environment   = "dev"
project_owner = "ootsuka"
author        = "Nehru"

# Network Configuration
vnet_address_space = ["172.16.0.0/16"]

# Subnet CIDR Blocks
app_subnet_cidr        = "172.16.1.0/24"
storage_subnet_cidr    = "172.16.2.0/24"
keyvault_subnet_cidr   = "172.16.3.0/24"
database_subnet_cidr   = "172.16.4.0/24"
openai_subnet_cidr     = "172.16.5.0/24"
deployment_subnet_cidr = "172.16.6.0/24"

# Security Notes:
# - All services use private endpoints for enhanced security
# - Network access is restricted to VNet subnets only
# - TLS 1.2 minimum enforced across all services
# - Managed identities used for authentication
# - No public network access for backend services