# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize as needed

# Resource Group Configuration
azurerm_resource_group_name     = "rpg-aiapp-rg"
azurerm_resource_group_location = "Japan East"

# Network Configuration
# Using 172.16.0.0/16 range to avoid conflicts with 10.x.x.x networks
# This is useful when:
# - Connecting to on-premises networks that use 10.x.x.x
# - Peering with other VNets that use 10.x.x.x
# - Part of a hub-and-spoke architecture

vnet_address_space = ["172.16.0.0/16"]

# Subnet CIDR Blocks (251 usable IPs per subnet)
app_subnet_cidr        = "172.16.1.0/24"  # Application tier (Function App)
storage_subnet_cidr    = "172.16.2.0/24"  # Storage Account private endpoint
keyvault_subnet_cidr   = "172.16.3.0/24"  # Key Vault private endpoint
database_subnet_cidr   = "172.16.4.0/24"  # SQL Database private endpoint
openai_subnet_cidr     = "172.16.5.0/24"  # Azure OpenAI private endpoint
deployment_subnet_cidr = "172.16.6.0/24"  # Cloud Shell Container Instance

# Alternative Network Configurations (commented out)
# -------------------------------------------------------

# Option 1: Use 10.x.x.x range (default for standalone deployments)
# vnet_address_space     = ["10.0.0.0/16"]
# app_subnet_cidr        = "10.0.1.0/24"
# storage_subnet_cidr    = "10.0.2.0/24"
# keyvault_subnet_cidr   = "10.0.3.0/24"
# database_subnet_cidr   = "10.0.4.0/24"
# openai_subnet_cidr     = "10.0.5.0/24"
# deployment_subnet_cidr = "10.0.6.0/24"

# Option 2: Use 192.168.x.x range (for smaller networks)
# vnet_address_space     = ["192.168.0.0/16"]
# app_subnet_cidr        = "192.168.1.0/24"
# storage_subnet_cidr    = "192.168.2.0/24"
# keyvault_subnet_cidr   = "192.168.3.0/24"
# database_subnet_cidr   = "192.168.4.0/24"
# openai_subnet_cidr     = "192.168.5.0/24"
